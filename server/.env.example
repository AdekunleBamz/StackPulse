# StackPulse Server Environment Variables

# Server Configuration
PORT=3000
NODE_ENV=production

# Hiro Chainhooks API
CHAINHOOKS_API_URL=https://api.mainnet.hiro.so
CHAINHOOKS_API_KEY=your_hiro_api_key_here

# Authentication
CHAINHOOK_AUTH_TOKEN=your_secret_webhook_auth_token

# Your deployed contract addresses (update after deployment)
DEPLOYER_ADDRESS=SP_YOUR_ADDRESS_HERE
REGISTRY_CONTRACT=stackpulse-registry
ALERT_CONTRACT=alert-manager
VAULT_CONTRACT=fee-vault
BADGE_CONTRACT=reputation-badges

# Redis (for caching and rate limiting)
REDIS_URL=redis://localhost:6379

# Notification Services (optional)
DISCORD_WEBHOOK_URL=
TELEGRAM_BOT_TOKEN=
EMAIL_API_KEY=

# Logging
LOG_LEVEL=info
