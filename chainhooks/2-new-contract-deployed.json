{
  "name": "new-contract-deployed",
  "chain": "stacks",
  "network": "mainnet",
  "version": 1,
  "filters": {
    "contract_deployment": {
      "deployers": ["*"]
    }
  },
  "options": {
    "start_at_block_height": 175000,
    "decode_clarity_values": true,
    "include_proof": false
  },
  "action": {
    "http": {
      "url": "https://stackpulse-b8fw.onrender.com/api/chainhooks/contract-deployed",
      "method": "POST",
      "authorization_header": "Bearer ${CHAINHOOK_AUTH_TOKEN}"
    }
  },
  "description": "Monitors all new smart contract deployments on Stacks mainnet"
}
