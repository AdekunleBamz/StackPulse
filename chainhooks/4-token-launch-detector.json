  "networks": {
    "mainnet": {
      "if_this": {
        "scope": "ft_event",
        "actions": ["mint"]
      },
      "then_that": {
        "http_post": {
          "url": "https://stackpulse-b8fw.onrender.com/api/chainhooks/token-launch",
          "authorization_header": "Bearer stackpulse-secret"
        }
      }
    }
  }
}
