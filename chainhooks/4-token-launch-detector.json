{
  "name": "token-launch-detector",
  "chain": "stacks",
  "network": "mainnet",
  "version": 1,
  "filters": {
    "contract_deployment": {
      "implement_trait": "SP3FBR2AGK5H9QBDH3EEN6DF8EK8JY7RX8QJ5SVTE.sip-010-trait-ft-standard.sip-010-trait"
    }
  },
  "options": {
    "start_at_block_height": 175000,
    "decode_clarity_values": true,
    "include_proof": false
  },
  "action": {
    "http": {
      "url": "https://your-server.com/api/chainhooks/token-launch",
      "method": "POST",
      "authorization_header": "Bearer ${CHAINHOOK_AUTH_TOKEN}"
    }
  },
  "description": "Detects new SIP-010 fungible token deployments for early token discovery"
}
