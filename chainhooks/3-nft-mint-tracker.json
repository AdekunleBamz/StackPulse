{
  "name": "nft-mint-tracker",
  "chain": "stacks",
  "network": "mainnet",
  "version": 1,
  "filters": {
    "nft_event": {
      "actions": ["mint"],
      "asset_identifier": "*"
    }
  },
  "options": {
    "start_at_block_height": 175000,
    "decode_clarity_values": true,
    "include_proof": false
  },
  "action": {
    "http": {
      "url": "https://stackpulse-b8fw.onrender.com/api/chainhooks/nft-mint",
      "method": "POST",
      "authorization_header": "Bearer ${CHAINHOOK_AUTH_TOKEN}"
    }
  },
  "description": "Tracks all NFT minting events across Stacks mainnet for collection monitoring"
}
