{
  "name": "whale-transfer-alert",
  "version": 1,
  "chain": "stacks",
  "networks": {
    "mainnet": {
      "if_this": {
        "scope": "stx_event",
        "actions": ["transfer"],
        "amount_greater_than": 100000000000
      },
      "then_that": {
        "http_post": {
          "url": "https://stackpulse-b8fw.onrender.com/api/chainhooks/whale-transfer",
          "authorization_header": "Bearer ${CHAINHOOK_AUTH_TOKEN}"
        }
      },
      "start_block": 175000,
      "decode_clarity_values": true
    }
  }
}
