{
  "name": "badge-earned",
  "chain": "stacks",
  "network": "mainnet",
  "version": 1,
  "filters": {
    "print_event": {
      "contract_identifier": "YOUR_DEPLOYER.reputation-badges",
      "contains": "badge-minted"
    }
  },
  "options": {
    "start_at_block_height": 175000,
    "decode_clarity_values": true,
    "include_proof": false
  },
  "action": {
    "http": {
      "url": "https://your-server.com/api/chainhooks/badge-earned",
      "method": "POST",
      "authorization_header": "Bearer ${CHAINHOOK_AUTH_TOKEN}"
    }
  },
  "description": "Tracks reputation badge NFT minting for gamification and user engagement"
}
